{
  "version": 2,
  "task": "classify",
  "basedir": "./20news",
  "batchsz": 50,
  "features": [
    {
      "name": "word",
      "vectorizer": {
        "type": "token1d",
	"transform": "baseline.lowercase"
      },
      "embeddings": {
        "label": "w2v-gn"
      }
    }
  ],
  "preproc": {
    "mxlen": 100,
    "rev": false,
    "clean": true,
    "min_f": 2,
    "trim": true
  },
  "backend": "tensorflow",
  "dataset": "20news-tok",
  "reader": {
    "type": "default"
  },
  "unif": 0.25,
  "model": {
    "type": "default",
    "filtsz": [
      2,
      3,
      4,
      5,
      6
    ],
    "cmotsz": 300,
    "dropout": 0.5,
    "finetune": true
  },
  "train": {
    "epochs": 60,
    "optim": "adam",
    "eta": 0.00005,
    "model_zip": true,
    "early_stopping_metric": "macro_f1",
    "verbose": {
      "console": true,
      "file": "20news-cm.csv"
    }
  }
}
