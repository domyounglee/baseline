{
  "version": 2,
  "modules": ["embed_elmo"],
  "task": "classify",
  "basedir": "./cola",
  "batchsz": 50,
  "features": [
    {
      "name": "word",
      "vectorizer": {
        "type": "token1d",
	"transform": "baseline.lowercase"
      },
      "embeddings": {
        "label": "w2v-gn"
      }
    },
    {
      "name": "elmo",
      "vectorizer": {
        "type": "elmo"
      },
      "embeddings": {
        "type": "elmo-embed",
        "dsz": 256,
        "embed_file": "/data/elmo/elmo_2x1024_128_2048cnn_1xhighway_weights.hdf5"
      }
    }
  ],
  "preproc": {
    "mxlen": 100,
    "rev": false,
    "clean": true
  },
  "backend": "tensorflow",
  "dataset": "cola-tok",
  "loader": {
    "reader_type": "default"
  },
  "unif": 0.25,
  "model": {
    "model_type": "default",
    "filtsz": [
      3,
      4,
      5
    ],
    "cmotsz": 100,
    "dropout": 0.5,
    "finetune": true
  },
  "train": {
    "epochs": 50,
    "optim": "adadelta",
    "eta": 1.0,
    "model_zip": true,
    "early_stopping_metric": "acc",
    "verbose": {
      "console": true,
      "file": "cola-cm.csv"
    }
  }
}
